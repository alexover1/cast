// libc bindings for ax.

libc :: #system_library "libc.so.6";

printf :: (format: *u8, ..) #foreign libc;
puts :: (s: *u8) -> int #foreign libc;
putchar :: (c: s32) -> int #foreign libc;
exit :: (status: s32) #foreign libc;

print_integer :: (x_: s32) {
    x := x_;
    if x > 9 {
        a := x / 10;
        x -= a * 10;
        print_integer(a);
    }
    putchar(x + "0");
}
